<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_add_a_trip_fourth"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Friends"
            android:id="@+id/select_friends_add_a_trip_fourth"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tick friends whom you&apos;d like to send notifications"
            android:id="@+id/tick_friends_add_a_trip_fourth"
            android:layout_below="@+id/select_friends_add_a_trip_fourth"
            android:layout_alignLeft="@+id/select_friends_add_a_trip_fourth"
            android:layout_alignStart="@+id/select_friends_add_a_trip_fourth"
            android:paddingBottom="10sp" />


    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_friends_add_a_trip_fourth"
        android:layout_below="@+id/ll_add_a_trip_fourth"
        android:layout_above="@+id/previous_button_add_a_trip_fourth"
        android:layout_centerHorizontal="true"
        android:choiceMode="multipleChoice"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/previous_button_add_a_trip_fourth"
        android:layout_above="@+id/progressBar2"
        android:layout_alignLeft="@+id/listView_friends_add_a_trip_fourth"
        android:layout_alignStart="@+id/listView_friends_add_a_trip_fourth" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button_add_a_trip_fourth"
        android:layout_above="@+id/progressBar2"
        android:layout_alignRight="@+id/listView_friends_add_a_trip_fourth"
        android:layout_alignEnd="@+id/listView_friends_add_a_trip_fourth" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:id="@+id/progressBar2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:progress="75"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp" />

</RelativeLayout>