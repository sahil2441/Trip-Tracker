<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Friends"
        android:id="@+id/select_friends_add_a_trip_fourth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tick friends whom you&apos;d like to send notifications"
        android:id="@+id/tick_friends_add_a_trip_fourth"
        android:layout_below="@+id/select_friends_add_a_trip_fourth"
        android:layout_alignLeft="@+id/select_friends_add_a_trip_fourth"
        android:layout_alignStart="@+id/select_friends_add_a_trip_fourth"
        android:paddingBottom="10sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_friends_add_a_trip_fourth"
        android:layout_above="@+id/previous_button_add_a_trip_fourth"
        android:layout_below="@+id/tick_friends_add_a_trip_fourth"
        android:layout_alignLeft="@+id/tick_friends_add_a_trip_fourth"
        android:layout_alignStart="@+id/tick_friends_add_a_trip_fourth"
        android:layout_marginTop="10sp"
        android:layout_alignRight="@+id/tick_friends_add_a_trip_fourth"
        android:layout_alignEnd="@+id/tick_friends_add_a_trip_fourth"
        android:layout_marginBottom="10sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/previous_button_add_a_trip_fourth"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/listView_friends_add_a_trip_fourth"
        android:layout_alignStart="@+id/listView_friends_add_a_trip_fourth" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/next_button_add_a_trip_fourth"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView_friends_add_a_trip_fourth"
        android:layout_alignEnd="@+id/listView_friends_add_a_trip_fourth" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_add_a_trip_fourth"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>