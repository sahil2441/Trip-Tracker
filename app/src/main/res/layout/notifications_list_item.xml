<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo_notifications_list_item"
        android:layout_gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginTop="5sp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_view_notifications_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:gravity="start"
        android:layout_toRightOf="@+id/logo_notifications_list_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="Sahil Jain has reached home"
        android:layout_toLeftOf="@+id/time_stamp_notifications_list_item"
        android:layout_toStartOf="@+id/time_stamp_notifications_list_item"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/time_stamp_notifications_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10sp"
        android:textStyle="normal"
        android:typeface="serif"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="8:39 pm"
        android:layout_alignBottom="@+id/text_view_notifications_list_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
