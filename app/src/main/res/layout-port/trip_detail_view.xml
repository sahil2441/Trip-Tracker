<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bandra to Worli"
        android:id="@+id/textView_trip_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set as Default"
        android:id="@+id/set_default_button"
        android:layout_below="@+id/textView_trip_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:layout_margin="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Trip"
        android:id="@+id/delete_trip_button"
        android:layout_alignTop="@+id/set_default_button"
        android:layout_toRightOf="@+id/textView_trip_name"
        android:layout_toEndOf="@+id/textView_trip_name" />
</RelativeLayout>