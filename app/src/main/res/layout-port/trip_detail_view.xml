<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="140dp"
    android:background="@drawable/layout_bg"
    tools:context=".main.TripDetailedActivity">

    <TextView
        android:id="@+id/textView_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="Bandra to Worli"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

    <Button
        android:id="@+id/set_default_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_check_point2"
        android:layout_margin="20dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:text="Activate Trip" />

    <Button
        android:id="@+id/delete_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/set_default_button"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:text="Delete Trip" />

    <ScrollView
        android:id="@+id/scrollView_recipients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_trip_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView_check_point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView_recipients"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="First Check Point: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_check_point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_check_point1"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Second Check Point:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />
</RelativeLayout>