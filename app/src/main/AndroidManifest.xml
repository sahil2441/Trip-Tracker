        </activity>

        <!-- Child of the TabMainActivity-->
        <activity
            android:name=".main.TripDetailedActivity"
            android:background="#33BBFFFF"
            android:label="Trip Details"
            android:parentActivityName="me.sahiljain.tripTracker.main.TabMainActivity"
